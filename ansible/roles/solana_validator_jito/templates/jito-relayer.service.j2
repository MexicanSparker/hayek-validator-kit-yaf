[Unit]
Description=Jito-Solana transaction relayer
Requires=network-online.target
After=network-online.target

# Ensure key files exist
ConditionPathExists={{ jito_relayer_keys_dir }}/jito-relayer-block-engine-private.json
ConditionPathExists={{ jito_relayer_keys_dir }}/jito-relayer-comms-private.pem
ConditionPathExists={{ jito_relayer_keys_dir }}/jito-relayer-comms-public.pem

[Service]
Type=simple
User={{ jito_relayer_user | default('sol') }}
Restart=on-failure

ExecStart={{ jito_relayer_startup_script }}

[Install]
WantedBy=multi-user.target
